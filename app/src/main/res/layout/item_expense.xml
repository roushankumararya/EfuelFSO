<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/adapter_fuelprices_back"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    android:padding="15dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="9"
        android:layout_height="wrap_content">

        <com.developtech.efuelfo.customs.CustomTextView
            android:id="@+id/tvVehicleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewNormal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <com.developtech.efuelfo.customs.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewNormal"
                android:text="@string/odometer_label"/>

            <com.developtech.efuelfo.customs.CustomTextView
                android:id="@+id/tvOdometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewNormal"
                android:layout_marginStart="5dp"
                android:textColor="@color/adapter_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <com.developtech.efuelfo.customs.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewNormal"
                android:text="@string/total_label"/>

            <com.developtech.efuelfo.customs.CustomTextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewNormal"
                android:layout_marginStart="5dp"
                android:textColor="@color/adapter_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="wrap_content">

                <com.developtech.efuelfo.customs.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextViewNormal"
                    android:text="@string/date_label"/>

                <com.developtech.efuelfo.customs.CustomTextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextViewNormal"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/adapter_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="6.5"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ellipse_green" />

                <com.developtech.efuelfo.customs.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextViewNormal"
                    android:layout_marginStart="5dp"
                    android:text="@string/time_label"/>

                <com.developtech.efuelfo.customs.CustomTextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextViewNormal"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/adapter_text" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="12dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        android:src="@drawable/right_arrow" />

</LinearLayout>