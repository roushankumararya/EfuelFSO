<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/corner_background_for_totalsale"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_background_for_totalsale"
        android:orientation="horizontal">
        <com.developtech.efuelfo.customs.RoundedImageView
            android:id="@+id/ivOperator"
            android:layout_margin="8dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/app_logo" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.6"
            android:baselineAligned="false"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.developtech.efuelfo.customs.CustomTextView
                    android:id="@+id/tvOperatorName"
                    android:layout_width="0dp"
                    android:layout_weight="0.60"
                    android:textAllCaps="true"
                    style="@style/TextViewNormal"
                    android:layout_height="wrap_content"
                    android:text="Gagan"/>
                <com.developtech.efuelfo.customs.CustomTextView
                    android:id="@+id/tvOperatorMobile"
                    android:layout_width="0dp"
                    android:layout_weight="0.40"
                    style="@style/TextViewNormal"
                    android:layout_height="wrap_content"
                    android:text="9876543210"/>

            </LinearLayout>

            <com.developtech.efuelfo.customs.CustomTextView
                android:id="@+id/tvTotalSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/TextViewMedium"
                android:text="0.0"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lytFuelPrices">

    </LinearLayout>

</LinearLayout>