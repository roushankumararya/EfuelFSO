<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/rootlayout"
    android:background="@color/bg_color"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/ivFuelCompany"
        android:layout_width="@dimen/sendbuttonheight"
        android:layout_height="@dimen/sendbuttonheight"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:contentDescription="@string/app_name" />
    <LinearLayout
        android:layout_width="40dp"
        android:id="@+id/invisibleLayout"
        android:visibility="gone"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_height="40dp">

    </LinearLayout>

    <com.developtech.efuelfo.customs.CustomTextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tvFuelCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:layout_marginStart="10dp"
        android:gravity="left"
        android:padding="5dip"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize16" />

</LinearLayout>
