<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rootLayout"
    android:background="@color/transparent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="9">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <com.developtech.efuelfo.customs.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="start|top"
                            android:layout_weight="1"
                            style="@style/TextViewNormal"
                            android:text="@string/vehicle_number_txt"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="15dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/corner_background" >
                        <com.developtech.efuelfo.customs.CustomEditText
                            android:id="@+id/etVehicleNumber"
                            android:layout_width="0dp"
                            android:layout_weight="1.8"
                            android:layout_height="40dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="0dp"
                            android:textAllCaps="true"
                            android:inputType="textCapCharacters"
                            android:maxLength="15"
                            style="@style/TextViewMedium"
                            android:singleLine="true"
                            android:hint="@string/please_enter_and_search"
                            android:textColorHint="@color/hint_color"
                            android:textColor="@android:color/black"
                            android:background="@drawable/corner_background" />
                        <ImageView
                            android:id="@+id/ivSearch"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:padding="8dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:contentDescription="@string/map"
                            android:src="@drawable/search"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <com.developtech.efuelfo.customs.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        style="@style/TextViewNormal"
                        android:layout_marginBottom="10dp"
                        android:text="@string/name_txt"
                        android:layout_marginStart="15dp" />

                    <com.developtech.efuelfo.customs.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corner_background"
                        android:padding="10dp"
                        style="@style/TextViewNormal"
                        android:textColor="@android:color/black"
                        android:id="@+id/tvDriverNameMobile"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="vertical">

                    <com.developtech.efuelfo.customs.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="start|center"
                        style="@style/TextViewNormal"
                        android:layout_marginStart="15dp"
                        android:text="@string/fuel_type_txt" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/corner_background"
                            android:padding="10dp"
                            style="@style/TextViewNormal"
                            android:textColor="@android:color/black"
                            android:id="@+id/spinnerFuelType"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ccp_down_arrow"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <com.developtech.efuelfo.customs.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            style="@style/TextViewNormal"
                            android:layout_marginStart="15dp"
                            android:text="@string/fuel_quantity_txt" />

                        <com.developtech.efuelfo.customs.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:layout_marginStart="20dp"
                            android:text="@string/fuel_amount_txt"
                            style="@style/TextViewNormal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:orientation="horizontal"
                            android:background="@drawable/corner_background" >
                            <com.developtech.efuelfo.customs.CustomEditText
                                android:id="@+id/etQuantity"
                                android:layout_width="0dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="0dp"
                                android:layout_weight="0.8"
                                android:inputType="numberDecimal"
                                android:gravity="center"
                                android:singleLine="true"
                                style="@style/TextViewMedium"
                                android:maxLength="5"
                                android:textColor="@android:color/black"
                                android:hint="@string/edit_value"
                                android:textColorHint="@color/hint_color"
                                android:layout_height="match_parent"
                                android:background="@drawable/corner_background"/>
                            <com.developtech.efuelfo.customs.CustomTextView

                                android:id="@+id/vT_pso_units"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="@string/ltrs_notation"
                                app:font_family="JosefinSans-Light.ttf"
                                android:gravity="center"
                                android:layout_weight="0.2"/>
                        </LinearLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="0.02"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:orientation="horizontal"
                            android:background="@drawable/corner_background" >
                            <com.developtech.efuelfo.customs.CustomEditText
                                android:id="@+id/etAmount"
                                android:layout_width="0dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="0dp"
                                style="@style/TextViewMedium"
                                android:hint="@string/edit_value"
                                android:textColorHint="@color/hint_color"
                                android:singleLine="true"
                                android:gravity="center"
                                android:maxLength="7"
                                android:textColor="@android:color/black"
                                android:inputType="numberDecimal"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:background="@drawable/corner_background" />
                            <com.developtech.efuelfo.customs.CustomTextView

                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="@string/rupee_symbol"
                                android:gravity="center"
                                style="@style/TextViewNormal"
                                android:textColor="@color/black_blur"
                                android:layout_weight="0.2"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <com.developtech.efuelfo.customs.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextViewNormal"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="8dp"
                            android:gravity="start|bottom"
                            android:text="@string/mileage" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="start|center"
                            android:orientation="horizontal"
                            android:background="@drawable/corner_background">
                            <com.developtech.efuelfo.customs.CustomEditText
                                android:id="@+id/etMileage"
                                android:layout_width="0dp"
                                android:inputType="number"
                                android:maxLength="6"
                                android:layout_weight="0.8"
                                android:paddingStart="10dp"
                                android:paddingEnd="0dp"
                                android:gravity="center"
                                style="@style/TextViewMedium"
                                android:textColor="@color/black"
                                android:layout_height="match_parent"
                                android:background="@drawable/corner_background"
                                android:hint="@string/mileage_hint"/>

                            <com.developtech.efuelfo.customs.CustomTextView
                                android:id="@+id/tvMileageUnit"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:text="@string/kms"/>
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <com.developtech.efuelfo.customs.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextViewNormal"
                            android:gravity="start|center"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="15dp"
                            android:text="@string/total_cost_txt" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <com.developtech.efuelfo.customs.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/textsize26"
                                android:gravity="center|end"
                                android:textStyle="bold"
                                android:text="@string/rupee_symbol"
                                android:textColor="@android:color/white"/>
                            <com.developtech.efuelfo.customs.CustomTextView
                                android:id="@+id/tvTotalAmount"
                                android:layout_weight="1.45"
                                android:layout_width="0dp"
                                android:paddingStart="5dp"
                                android:paddingEnd="0dp"
                                android:singleLine="true"
                                android:layout_height="50dp"
                                android:gravity="start|center"
                                android:text="@string/zero_value"
                                android:textColor="@color/app_theme_color"
                                android:textSize="@dimen/textsize26" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- <View
                     android:layout_width="match_parent"
                     android:layout_height="100dp"/>-->
            </LinearLayout>

        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sendbuttonheight"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <com.developtech.efuelfo.customs.CustomButton
                android:id="@+id/btnSend"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                style="@style/TextViewMedium"
                android:background="@drawable/corner_green_background"
                android:text="@string/send_btn" />

            <com.developtech.efuelfo.customs.CustomButton
                android:id="@+id/btnPark"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                style="@style/TextViewMedium"
                android:layout_marginLeft="10dp"
                android:background="@drawable/corner_green_background"
                android:text="@string/park_tns" />

        </LinearLayout>


    </LinearLayout>


    <include layout="@layout/layout_progress"/>
</FrameLayout>